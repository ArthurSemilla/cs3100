<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rsck.chalkboard" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="Home"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ClassOverView"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="ClassOverView"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AddClass"
            android:label="@string/title_activity_add_class"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AddAssignment"
            android:label="@string/title_activity_add_assignment"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Details"
            android:label="Details"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AddCategory"
            android:label="AddCategory"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AssignmentModify"
            android:label="AssignmentModify"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
